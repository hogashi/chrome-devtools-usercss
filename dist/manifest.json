{
  "manifest_version": 2,
  "name": "chrome-usercss-hogashi",
  "version": "0.3.0",
  "description": "usercss for each site",
  "author": "hogashi",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["index.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "chrome-usercss-hogashi",
    "default_popup": "popup.html"
  },
  "options_page": "popup.html"
}
