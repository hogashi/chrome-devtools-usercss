{
  "manifest_version": 2,
  "name": "chrome-usercss-hogashi",
  "version": "0.0.1",
  "description": "usercss for each site",
  "author": "hogashi",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["index.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "chrome-usercss-hogashi",
    "default_popup": "popup.html"
  },
  "options_page": "popup.html"
}
